<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".moneyCalculator"
    android:background="@color/colorLite">

    <include
        android:id="@+id/calc_toolbar"
        layout="@layout/calculator_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="60dp">
            <Button
                android:id="@+id/btnOperDate"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:background="@color/colorLite"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginBottom="20dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:gravity="center_horizontal"
                    android:text="Category"/>
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/spinnerCategory"
                    android:background="@drawable/spinner_shape"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:textSize="20sp"
                    android:text="Account"/>
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/spinnerAccount"
                    android:background="@drawable/spinner_shape"/>
            </LinearLayout>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:id="@+id/etComment"
                android:hint="Comment"
                android:layout_marginLeft="7dp"
                android:maxLength="100"
                android:inputType="text"
                android:maxLines="1"
                android:layout_marginRight="7dp"
                android:imeOptions="actionDone"/>
        </LinearLayout>

        <!-- Calculator layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
           >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvResultText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="40sp"
                    android:gravity="right"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:id="@+id/btnBack"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="7"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:onClick="calculatorBtnOnClick"
                    android:background="@drawable/backspace_black_48"
                    android:textColor="@color/darkGrey"
                    style="?android:attr/borderlessButtonStyle"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn1"
                    android:text="1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:padding="0dp"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginRight="1dp"
                    android:onClick="calculatorBtnOnClick"
                    android:background="@color/darkGrey"
                    android:textColor="@color/colorLite"
                    />
                <Button
                    android:id="@+id/btn2"
                    android:text="2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:onClick="calculatorBtnOnClick"
                    android:layout_marginBottom="1dp"
                    android:layout_marginRight="1dp"
                    android:background="@color/darkGrey"
                    android:textColor="@color/colorLite"/>
                <Button
                    android:id="@+id/btn3"
                    android:text="3"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:onClick="calculatorBtnOnClick"
                    android:layout_marginBottom="1dp"
                    android:layout_marginRight="1dp"
                    android:background="@color/darkGrey"
                    android:textColor="@color/colorLite"/>
                <Button
                    android:id="@+id/btnDiv"
                    android:text="รท"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:onClick="calculatorBtnOnClick"
                    android:layout_marginBottom="1dp"
                    android:background="@color/darkGrey"
                    android:textColor="@color/colorLite"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn4"
                    android:text="4"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:onClick="calculatorBtnOnClick"
                    android:layout_marginBottom="1dp"
                    android:layout_marginRight="1dp"
                    android:background="@color/darkGrey"
                    android:textColor="@color/colorLite"/>
                <Button
                    android:id="@+id/btn5"
                    android:text="5"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:onClick="calculatorBtnOnClick"
                    android:layout_marginBottom="1dp"
                    android:layout_marginRight="1dp"
                    android:background="@color/darkGrey"
                    android:textColor="@color/colorLite"/>
                <Button
                    android:id="@+id/btn6"
                    android:text="6"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:onClick="calculatorBtnOnClick"
                    android:layout_marginBottom="1dp"
                    android:layout_marginRight="1dp"
                    android:background="@color/darkGrey"
                    android:textColor="@color/colorLite"/>
                <Button
                    android:id="@+id/btnMul"
                    android:text="ร"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:onClick="calculatorBtnOnClick"
                    android:layout_marginBottom="1dp"
                    android:background="@color/darkGrey"
                    android:textColor="@color/colorLite"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn7"
                    android:text="7"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:onClick="calculatorBtnOnClick"
                    android:layout_marginBottom="1dp"
                    android:layout_marginRight="1dp"
                    android:background="@color/darkGrey"
                    android:textColor="@color/colorLite"/>
                <Button
                    android:id="@+id/btn8"
                    android:text="8"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:onClick="calculatorBtnOnClick"
                    android:layout_marginBottom="1dp"
                    android:layout_marginRight="1dp"
                    android:background="@color/darkGrey"
                    android:textColor="@color/colorLite"/>
                <Button
                    android:id="@+id/btn9"
                    android:text="9"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:onClick="calculatorBtnOnClick"
                    android:layout_marginBottom="1dp"
                    android:layout_marginRight="1dp"
                    android:background="@color/darkGrey"
                    android:textColor="@color/colorLite"/>
                <Button
                    android:id="@+id/btnSubstract"
                    android:text="-"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:onClick="calculatorBtnOnClick"
                    android:layout_marginBottom="1dp"
                    android:background="@color/darkGrey"
                    android:textColor="@color/colorLite"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnSeparator"
                    android:text="."
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:onClick="calculatorBtnOnClick"
                    android:layout_marginBottom="1dp"
                    android:layout_marginRight="1dp"
                    android:background="@color/darkGrey"
                    android:textColor="@color/colorLite"/>
                <Button
                    android:id="@+id/btn0"
                    android:text="0"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:onClick="calculatorBtnOnClick"
                    android:layout_marginBottom="1dp"
                    android:layout_marginRight="1dp"
                    android:background="@color/darkGrey"
                    android:textColor="@color/colorLite"/>
                <Button
                    android:id="@+id/btnEquals"
                    android:text="="
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:onClick="calculatorBtnOnClick"
                    android:layout_marginBottom="1dp"
                    android:layout_marginRight="1dp"
                    android:background="@color/colorOrange"
                    android:textColor="@color/colorLite"/>
                <Button
                    android:id="@+id/btnAdd"
                    android:text="+"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:onClick="calculatorBtnOnClick"
                    android:layout_marginBottom="1dp"
                    android:background="@color/darkGrey"
                    android:textColor="@color/colorLite"/>

            </LinearLayout>

            <Button
                android:id="@+id/btnSave"
                android:text="@string/save"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:textColor="@color/colorLite"
                android:background="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:onClick="btnSaveOnClick"/>

        </LinearLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>