<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width = "match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorLite">

    <include
        android:id="@+id/toolbar"
        layout="@layout/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <com.astuetz.PagerSlidingTabStrip
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textSize="12sp"
        android:textColor="#000000"
        app:pstsUnderlineColor="@color/colorAccent"
        app:pstsDividerColor="@color/colorAccent"
        app:pstsIndicatorHeight="2dp"/>


    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="@string/Outcome"
            android:background="@drawable/btn_outcome_shape"
            android:textColor="@color/colorLiteRed"
            android:textSize="20sp"
            android:layout_marginRight="5dp"
            style="?android:attr/borderlessButtonStyle"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@drawable/btn_income_shape"
            android:textColor="@color/colorLiteGreen"
            android:text="@string/Income"
            android:textSize="20sp"
            style="?android:attr/borderlessButtonStyle"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:textSize="40sp"
            android:text="@string/slideLeft"
            android:textColor="@color/colorPrimary"
            android:background="@color/colorLite"
            android:layout_weight="3"
            style="?android:attr/borderlessButtonStyle"/>

        <Spinner
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:entries="@array/timePeriod"
            android:layout_weight="2"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:textSize="40sp"
            android:text="@string/slideRight"
            android:textColor="@color/colorPrimary"
            android:background="@color/colorLite"
            android:layout_weight="3"
            style="?android:attr/borderlessButtonStyle"/>

    </LinearLayout>

</LinearLayout>